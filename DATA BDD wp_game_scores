<?php
global $wpdb;

$current_user = wp_get_current_user();

$results = $wpdb->get_results( $wpdb->prepare( "SELECT nickname, COUNT(DISTINCT game_date) as distinct_game_date, MAX(score) as max_score FROM wp_game_scores WHERE nickname = %s GROUP BY nickname", $current_user->user_login ), OBJECT );

if ( $results ){
    foreach ( $results as $row ){
        echo $row->nickname . ', vous avez réalisé un total de ' . $row->distinct_game_date . ' parties et obtenu un score maximal de ' . $row->max_score . '.';
    }
}
?>
